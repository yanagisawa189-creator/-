# SerpAPI Configuration (必須)
SERPAPI_KEY=your_serpapi_key_here

# Google Sheets Configuration
SHEET_ID=your_google_spreadsheet_id_here
GOOGLE_SHEETS_CLIENT_EMAIL=your-service-account@project-id.iam.gserviceaccount.com
GOOGLE_SHEETS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"

# Anthropic Claude API (Web Search用 - オプション)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Target domains for checking (カンマ区切り)
TARGET_DOMAINS=example.com,your-domain.com

# Output settings
OUTPUT_DIR=./runs
SCREENSHOT_DIR=./screenshots

# Retry settings
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# Debug settings
DEBUG=true

# Execution mode
RUN_ONCE=false